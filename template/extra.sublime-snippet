bool sortbysec(const pair<int,int> &a,const pair<int,int> &b) { return (a.second < b.second); }
ll powe(ll a,ll b,ll mod=MOD) {   b%=(mod-1); ll res=1; while(b>0){ if(b&1) res=(res*a)%mod; a=(a*a)%mod; b>>=1; }  return res; }

